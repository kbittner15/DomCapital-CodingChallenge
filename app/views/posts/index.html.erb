
<p id="notice"><%= notice %></p>
<div id = "background">


  <div id = "top_bar">
<h1 id = "logo"> My Blog </h1>

     <h3 id="page-name">Posts</h3>

</div>



<div id = "inner_page">

  <p id = "links">
    <%= link_to 'New Post', new_post_path %>
  </p>




<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>



  <% @posts.each do |post| %>

    <div id = "posts" >
      <h2 class="text-xl font-semibold"><%= post.title %> </h2>
      <div class="m-1 pb-4"><%= post.content %></div>
      <div><%= link_to 'Show ', post %><%= link_to ' Edit ', edit_post_path(post) %><%= link_to ' Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div>

  <% end %>

</table>
<br>
</div>
</div>

