<div id = "top_bar">
  <h1 id = "logo"> My Blog </h1>
</div>
<h2 id = "pagelogo">Editing post</h2>

<div id = "inner_page">

  <%= link_to 'Home', posts_path %> | <%= link_to 'Show ', @post %>



    <%= form_for @post do |f| %>

 <div id="newpost_form">
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :size=>"40x10"%>
  </p>


  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, :size=>"100x20"%>
  </p>


<p>
      <%= f.submit "Save changes" %>
</p>
</div>
    <% end %>

</div>

